<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{asset('bundles/followme/node_modules/bootstrap/dist/css/bootstrap.css')}}"/>
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path ('main')}}">FOLLOW ME</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                {% if app.session.get("id") %}
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">MENU
                    <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="{{ path ('dating')}}">DATING</a></li>
                      <li><a href="{{ path ('add')}}">ADD</a></li>
                      <li><a href="{{ path ('admin')}}">ADMIN</a></li>
                    </ul>
                  </li>
                    <li><a href="{{ path ('signout')}}">SIGN OUT</a></li>                
                {% else %}
                    <li><a href="{{ path ('signin')}}">SIGN IN</a></li>                
                    <li><a href="{{ path ('signup')}}">SIGN UP</a></li>                
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
        <main class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
            {% block body %}{% endblock %}
        </main>    
        {% block javascripts %}{% endblock %}
        <script src="{{asset('bundles/followme/node_modules/jquery/dist/jquery.js')}}" type='text/javascript'></script> 
        <script src="{{asset('bundles/followme/node_modules/bootstrap/dist/js/bootstrap.js')}}" type='text/javascript'></script>        
    </body>
</html>
